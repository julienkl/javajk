<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" spacing="10" alignment="CENTER">
    <Label fx:id="messageLabel" text="Gestion des utilisateurs !"/>

    <VBox spacing="10" alignment="CENTER">  
        <Button fx:id="addUserButton" text="Ajouter un utilisateur !" minWidth="100"/>
        <Button fx:id="deleteUserButton" text="Supprimer un utilisateur !" minWidth="100"/>
        <Button fx:id="editUserButton" text="Modifier un utilisateur !" minWidth="100"/>
        <Button fx:id="searchUserButton" text="Rechercher un utilisateur !" minWidth="100"/>
        <Button fx:id="generateCsvButton" text="Générer un CSV des utilisateurs !" minWidth="100"/>
        <Button fx:id="resetListButton" text="Réinitialiser la liste !" minWidth="100"/>

    </VBox>
    <!-- TableView ajouté ici -->
    <TableView fx:id="userTable" prefWidth="500" prefHeight="300" >
        <columns>
            <TableColumn fx:id="idColumn" text="ID" />
            <TableColumn fx:id="nameColumn" text="Nom" />
            <TableColumn fx:id="emailColumn" text="Email" />
        </columns>
    </TableView>
</VBox>
